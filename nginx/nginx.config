server {
    listen 80;
    server_name healthy-lifestyle-assistant.com www.healthy-lifestyle-assistant.com;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    server_name healthy-lifestyle-assistant.com www.healthy-lifestyle-assistant.com;

    ssl_certificate /etc/letsencrypt/live/healthy-lifestyle-assistant.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/healthy-lifestyle-assistant.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    ssl_protocols TLSv1.2 TLSv1.3;

    location / {
        root /var/www/html/dist;
        try_files $uri $uri/ /index.html;
    }

    location /api/v1/ {
        proxy_pass http://localhost:8085;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

        # Optional: Adjust the following proxy headers based on your application's requirements
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;
    }
}
